{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "importHelpers": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "types": [
      "node"
    ],
    "pretty": true,
    "listEmittedFiles": false,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "*.d.ts"
  ]
}